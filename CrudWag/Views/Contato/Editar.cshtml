@{
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Contact Info</h4>
            <p class="card-description">Add al valid information</p>
            <form class="forms-sample" asp-controller="Contato" asp-action="Alterar" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="ImgUrl">Image Url</label>
                    <input type="text" class="form-control" asp-for="ImgUrl" placeholder="Image Url">
                </div>
                <div class="form-group">
                    <label for="ImgUrl">Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Your Name">
                </div>
                <div class="form-group">
                    <label for="Email">Email address</label>
                    <input type="email" class="form-control" asp-for="Email" placeholder="Your Email">
                </div>
                <div class="form-group">
                    <label for="Phone">Phone</label>
                    <input type="number" class="form-control" asp-for="Phone" placeholder="Your Phone">
                </div>
                <div class="form-group">
                    <label for="ImgUrl">Job</label>
                    <input type="text" class="form-control" asp-for="Job" placeholder="Your Name">
                </div>
                <div class="form-group">
                    <label for="Observation">Observation</label>
                    <textarea class="form-control" asp-for="Observation" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button class="btn btn-dark" asp-controller="Contato" asp-action="Index">Cancel</button>
            </form>
        </div>
    </div>
</div>